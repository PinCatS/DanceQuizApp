<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/activityBackground</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="QuestionListItemStyle">
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="QuestionListHeader">
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColor">@color/questionTitle</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="QuestionTextStyle">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ControlsStyle">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="SeekBarDiscreteStyle" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">@android:color/white</item>
        <item name="android:progressTint">@color/colorAccent</item>
        <item name="android:thumbTint">@color/colorPrimary</item>
    </style>

    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
    </style>

</resources>
